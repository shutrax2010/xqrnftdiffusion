<!DOCTYPE html>
<html>

<head>
    <title>Create Event</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" type="image/x-icon" href="../assets/PhygitalifyQR icon.png">
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">
</head>
<style>
    .nft-header {
        font: 18px "Lucida Grande", Helvetica, Arial, sans-serif;
        color: white;
        background-color: #030340;
        padding: 0px 40px;
    }

    .nft-header h1 a {
        text-decoration: none;
        color: inherit;
    }

    .logo {
        max-width: 60px;
        margin-right: 10px;
    }

    .logoWithHeader {
        display: flex;
        align-items: center;
        padding: 10px 0px;
    }

    .site-name {
        font: 23px "Lucida Grande", Helvetica, Arial, sans-serif;
    }

    .site-name:hover {
        opacity: 0.6;
    }

    .container {
        margin: 40px;
    }

    .createEvent {
        padding: 2px 15px;
        border: 0.5px solid #030340;
        border-radius: 20px;
        background-color: #030340;
        color: #fff;
        text-decoration: none;
        font-size: 13px;
    }

    .event img{
        width: 150px;
    }
</style>

<body>
    <div class="nft-header">
        <div class="logoWithHeader">
            <a href="/menu"><img src="../assets/PhygitalifyQR icon.png" alt="PhygitalifyQR Icon"
                    class="logo clickable"></a>
            <h1 class="site-name"><a href="/menu">PhygitalifyQR</a></h1>
        </div>
    </div>

    <div class="container">
        <% menuItems.forEach(item=> { %>
            <a href="/mintNft" class="createEvent">Create new event</a>
            <br>
            <% }) %>
                <hr style="border: 1px solid #030340; margin-top: 30px;">

                <div class="eventContainer">
                    <% menuItems.forEach(item=> { %>
                        <div class="event">
                            <img src="<%= item.image %>">
                            <p><%= item.label.replace(/\n/g, '<br>') %></p>
                            <a href="<%= item.action.replace('navigate(', '').replace(')', '').replace(/['" ]/g, '' )
                                %>">
                                See more
                            </a>
                        </div>
                        <br>
                        <% }) %>
                </div>
    </div>


    <script>
        function navigate(url) {
            window.location.href = url;
        }
    </script>
</body>

</html>